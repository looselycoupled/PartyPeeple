
<section class="main freeform" id="profile">
    <header class="clearfix">
        <figure><%= image_tag "http://graph.facebook.com/#{@peep.identifier}/picture?type=normal" %></figure>
        <h1><%= @peep.first_name %></h1>
        <dl>
            <dt>Digital Capital</dt>
            <dd><%= @peep.digital_capital || "Still calculating..."%></dd>
            <dt>Sign</dt>
            <dd><%= @peep.birthday.try(:to_date).try(:zodiac_sign) %></dd>
            <dt class="rec">Recommendation</dt>
            <dd class="rec"><%= (Party::recommendation @person, @peep).titleize %></dd>
        </dl>
    </header>
    <h2>Conversation Starters</h2>
    <ul class="starters">
      
        <% if Rails.env == "development" || @person.birthday == @peep.birthday %>
        <li class="clearfix">
            <%= image_tag "/images/icons/conversation/birthday.jpg" %>
            <h3>Same birthday</h3>
            <h4>Born <%= @peep.birthday.to_date.to_formatted_s(:long_ordinal) %></h4>
        </li>
        <% end %>
      
        <% if Rails.env == "development" ||  ((Party::recommendation @person, @peep) == "F#!%" && Party::friends_in_common(@person, @peep).count == 0) %>
        <li class="clearfix">
            <%= image_tag "/images/icons/conversation/nofriends.jpg" %>
            <h3>Tomorrow Morning Won't Be Awkward</h3>
            <h4>No Mutual Friends</h4>
        </li>
        <% end %>

        <% if Rails.env == "development" || (@person.religion == @peep.religion && !@peep.religion.nil?) %>
        <li class="clearfix">
            <%= image_tag "/images/icons/conversation/religious.jpg" %>
            <h3>Same Religious Views!</h3>
            <h4><%= @peep.religion %></h4>
        </li>
        <% end %>

        <% if Rails.env == "development" || (@person.political == @peep.political && !@peep.political.nil?) %>
        <li class="clearfix">
            <%= image_tag "/images/icons/conversation/constitution.jpg" %>
            <h3>Same Religious Views!</h3>
            <h4><%= @peep.political %></h4>
        </li>
        <% end %>

        <% if Rails.env == "development" || (@person.favorite_books & @peep.favorite_books).count > 0 %>
            <% (@peep.favorite_books)[0..1].each do |book| %>
        <li class="clearfix">
            <img src='http://graph.facebook.com/<%= book.identifier %>/picture' />
            <h3>Same Favorite Book!</h3>
            <h4><%= book.name %></h4></li>
        </li>
            <% end %>
        <% end %>
        
        <% if Rails.env == "development" || @friends_in_common.count > 0 %>
            <% 
               @friends_in_common[0..1].each do |friend| 
               friend.first_name ||= friend.name.split(" ")[0]
            %>
        <li class="clearfix">
            <%= image_tag("http://graph.facebook.com/#{friend.identifier}/picture?type=square", :alt => friend.first_name) %>
            <h3>Mutual Friend</h3>
            <h4><%= friend.first_name %></h4></li>
        </li>
            <% end %>
        <% end %>
        
        

    </ul>
    
    
    <div class="wingpeeps clearfix">
        <p><img src="/images/goose-maverick.jpg" />You don't have to go alone. Pick up a wingpeep at the booth.</p>
    </div>
</section>